<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="jianshu.io.app.LikeActivity">

  <jianshu.io.app.widget.ObservableWebView
      android:id="@+id/like_webview"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"/>

  <LinearLayout
      android:id="@+id/like"
      android:clickable="true"
      android:alpha="0.5"
      android:layout_alignParentRight="true"
      android:layout_alignParentBottom="true"
      android:background="@drawable/jianshu_border"
      android:layout_width="113dp"
      android:layout_height="42dp">

    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">

      <ProgressBar
          android:id="@+id/like_progress"
          style="@android:style/Widget.ProgressBar.Horizontal"
          android:max="6"
          android:progressDrawable="@drawable/like_progressbar"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>
      <TextView
          android:id="@+id/like_text"
          android:text="â™¥ 12"
          android:gravity="center"
          android:textSize="20dp"
          android:textColor="#fff"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"/>

    </RelativeLayout>

  </LinearLayout>

</RelativeLayout>
